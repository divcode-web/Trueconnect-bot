# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=https://your-domain.com
ADMIN_USER_ID=your_telegram_user_id

# Optional Channel Settings
CHANNEL_USERNAME=@your_channel
CHANNEL_PROMOTION_FREQUENCY=5

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Payment Gateway Configuration
# PayStack (for Nigerian market)
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# NOWPayments (for crypto payments)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret

# Application Settings
NODE_ENV=development
PORT=3000

# Security Settings
JWT_SECRET=your_jwt_secret_for_sessions
ENCRYPTION_KEY=your_32_character_encryption_key

# Feature Flags
VERIFICATION_REQUIRED=false
ENABLE_ANALYTICS=true
ENABLE_LOCATION_VERIFICATION=true

# Support Contact
SUPPORT_USERNAME=@your_support_username
SUPPORT_EMAIL=support@yourdomain.com

# File Storage (if not using Telegram file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password